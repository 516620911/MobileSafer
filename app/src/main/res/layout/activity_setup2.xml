<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        style="@style/TitleStyle"
        android:background="#0f0"
        android:text="2.手机卡绑定"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="说明:\n下次重启手机如果发现SIM卡变化\n就会发送报警短信"
        android:textSize="21sp"
        android:layout_margin="10dp"/>
    <com.chenjunquan.mobilesafer.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.chenjunquan.mobilesafer"
        android:layout_width="match_parent"
        android:id="@+id/siv_sim_bound"
        android:layout_height="wrap_content"
        mobilesafe:destitle="是否绑定SIM卡"
        mobilesafe:desoff="SIM未绑定"
        mobilesafe:deson="SIM已绑定"
        />
    <!--让内容控件水平居中-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setup1"
            android:layout_centerInParent="true"/>
        <!--图片选择器-->
        <Button
            style="@style/preBtn"/>
        <Button
            style="@style/nextBtn"/>
    </RelativeLayout>
</LinearLayout>